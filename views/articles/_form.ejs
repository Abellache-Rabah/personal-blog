<div class="form-group">
	<label for="title">Title</label>
	<input type="text" name="title" value="<%= articles.title%>" id="title" class="form-control" required>
	
 

</div>
<div class="form-group">
	<label for="date">Date</label>
	<input type="date" name="date" value="<%= articles.date%>" id="date" class="form-control" required>
</div>
<div class="form-group">
	<label for="description">Description</label>
	<textarea name="description" id="description" rows=3 class="form-control" required><%= articles.description%></textarea>
</div>

<div class="form-group">
	<label for="markdown">Markdown</label>
	<textarea name="markdown" id="markdown" rows=6 class="form-control" required><%= articles.markdown%></textarea>
</div>
	<a href="/" id="cancel">Cancel</a>
	<button id="save" type="submit">Save</button>